    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "MIMode": "gdb",
            "program": "${workspaceFolder}/bazel-out/k8-dbg/bin/${fileBasenameNoExtension}.runfiles/__main__/${fileBasenameNoExtension}",
